{% extends '::base.html.twig' %}

{% block title %}BACKEND{% endblock %}

{% block stylesheets %}
{% stylesheets  '@BackendBundle/Resources/public/css/normalize.min.css'
                '@BackendBundle/Resources/public/css/main.css'
                '@BackendBundle/Resources/public/css/mibackend.css'
                output='css/backend.css' %}
<link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
{% endstylesheets %}
{% endblock %}

{% block javascripts %}
{% javascripts  '@BackendBundle/Resources/public/js/jquery-1.9.1.min.js'
                '@BackendBundle/Resources/public/js/modernizr-2.6.2-respond-1.1.0.min.js'
                '@BackendBundle/Resources/public/js/mibackend.js'
                output='js/backend.js' %}
<script src="{{ asset_url }}" type="text/javascript"></script>
{% endjavascripts %}
<script type="text/javascript" src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
<script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
{% endblock %}

{% block body %}

